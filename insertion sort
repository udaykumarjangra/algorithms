#include<iostream>
#include<stdlib.h>
#include<conio.h>
#include<windows.h>
using namespace std; 

int insertion_sort(int arr[], int n)
{
	int i, j, temp;
	for(i=1;i<n;i++)
		{
			temp = arr[i];
			j = i-1;
			while((temp < arr[j]) && (j>=0))
				{
					arr[j+1] = arr[j];
					j--;
				}
			arr[j+1] = temp;
		}
	cout<<"\n The array sorted in ascending order is :\n"<<endl;
	for(i=0;i<n;i++)
	cout<<arr[i]<<"\t";
	cout<<endl;
	system("pause");
 	return 0;
 	
}
