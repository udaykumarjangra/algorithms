#include<iostream>

using namespace std;

int main()
{
	int i,j,n;
	cout<<"enter the size of array\n";
	cin>>n;
	int arr[n];
	cout<<"Enter the numbers to be sorted\n";
	for(i=0;i<n;i++)
	cin>>arr[i];
	
	//to sort
	
	for (i=0;i<n-1;i++)
	{
		for(j=0;j<n-i-1;j++)
		{
			if(arr[j]>arr[j+1])
			{
				int temp;
				temp=arr[j];
				arr[j]=arr[j+1];
				arr[j+1]=temp;
			}
		}
	}
	
	//print
	cout<<"the sorted array is\n";
	for(i=0;i<n;i++)
	cout<<arr[i]<<"\t";
	
}
